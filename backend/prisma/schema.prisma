
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id String @id @default(uuid())
  name String 
  email String @unique
  password String
  post post[]
}

model post {
  id String @id @default(uuid())
  title String
  text String
  authorId String
  User user @relation(fields: [authorId], references: [id])
}